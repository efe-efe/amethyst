<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/tutorial.css" />
	</styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/tutorial.js" />
    </scripts>
	<Panel class="Tutorial">
        <Panel id="Tutorial__Container" class="Tutorial__Container">
            <Image id="Tutorial__Image" class="Tutorial__Image" src="" />
            <Label id="Tutorial__Title" class="Tutorial__Title" text="Movement" hittest="false" />
            <Label id="Tutorial__Description" class="Tutorial__Description" html="true" text="This is the text on this section" />
            <Button id="Tutorial_CloseButton" class="Button--Light" onactivate="Close()">
                <Label class="Button__Text" text="Close"/>
            </Button>
            <Button id="Tutorial_ContinueButton" class="Button" onactivate="Next()">
                <Label class="Button__Text" text="Continue"/>
            </Button>
        </Panel>
    </Panel>
</root>
