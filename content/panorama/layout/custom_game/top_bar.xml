<root>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/progress_bar.js" />
        <include src="file://{resources}/scripts/custom_game/util.js" />
        <include src="file://{resources}/scripts/custom_game/top_bar.js" />
    </scripts>
    <styles>
        <include src="file://{resources}/styles/custom_game/top_bar.css" />
        <include src="file://{resources}/styles/custom_game/progress_bar.css" />
    </styles>
    <snippets>
        <snippet name="AllianceBar">
            <Panel class="AllianceBar" hittest="false" hittestchildren="false">
                <Panel id="AllianceBar__Health" class="AllianceBar__Health" hittest="false" hittestchildren="false"/>
                <Panel id="AllianceBar__Bottom" class="AllianceBar__Bottom" hittest="false" hittestchildren="false">
                    <Panel id="AllianceBar__Amethysts" class="AllianceBar__Amethysts" hittest="false" hittestchildren="false">
                        <Panel id="AllianceBar__Amethysts_Image_Container" class="AllianceBar__Amethysts_Image_Container" hittest="false" hittestchildren="false">
                            <Image id="AllianceBar__Amethysts_Image" class="AllianceBar__Amethysts_Image" src="file://{images}/custom_game/amethyst.png" />
                        </Panel>
                        <Label id="AllianceBar__Amethysts_Text" class="AllianceBar__Amethysts_Text" html="true" text="X0" />
                    </Panel>
                    <Panel id="AllianceBar__Score_Container" class="AllianceBar__Score_Container" hittest="false" hittestchildren="false">
                        <Panel id="AllianceBar__Score_Points" class="AllianceBar__Score_Points" hittest="false" hittestchildren="false"/>
                    </Panel>
                </Panel>
            </Panel>
        </snippet>
        
        <snippet name="AllianceBar__Score_Point">
            <Panel class="AllianceBar__Score_Point" hittest="false" hittestchildren="false">
            </Panel>
        </snippet>
    </snippets>
    <Panel class="TopBar" hittest="false">
        <Panel id="TopBar__Container" class="TopBar__Container" hittest="false" >
            <Panel id="TopBar__Left" class="TopBar__Left">
                <Panel id="TopBar__Radiant" class="TopBar__Radiant" hittest="false" hittestchildren="false"/>
                <Panel id="TopBar__Legion" class="TopBar__Legion" hittest="false" hittestchildren="false"/>
            </Panel>
            <Panel id="TopBar__Middle" class="TopBar__Middle" hittest="false" hittestchildren="false">
                <Panel id="TopBar__Score" class="TopBar__Score" hittest="false" hittestchildren="false">
                    <Label id="TopBar__Score_Text" class="TopBar__Score_Text" html="true" text="0" />
                    <Panel id="TopBar__Image_Container" class="TopBar__Image_Container" hittest="false" hittestchildren="false">
                        <Image id="TopBar__Image" class="TopBar__Image" src="file://{images}/custom_game/sword.png" />
                    </Panel>
                    <Label id="TopBar__Score_Text" class="TopBar__Score_Text" html="true" text="0" />
                </Panel>
                <Panel id="TopBar__Clock" class="TopBar__Clock" hittest="false" hittestchildren="false">
                    <Label id="TopBar__Clock_Text" class="TopBar__Clock_Text" html="true" text="--:--" />
                </Panel>
            </Panel>
            <Panel id="TopBar__Right" class="TopBar__Right">
                <Panel id="TopBar__Dire" class="TopBar__Dire" hittest="false" hittestchildren="false"/>
                <Panel id="TopBar__Void" class="TopBar__Void" hittest="false" hittestchildren="false"/>
            </Panel>
        </Panel>
    </Panel>
</root>