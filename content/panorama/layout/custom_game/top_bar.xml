<root>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/top_bar.js" />
    </scripts>
    <styles>
        <include src="file://{resources}/styles/custom_game/top_bar.css" />
    </styles>
    <snippets>
        <snippet name="TeamHealthBar">
            <Panel class="TeamHealthBar" hittest="false" hittestchildren="false">
                <Panel class="TeamHealthBarInnerBack" hittest="false" hittestchildren="false"/>
                <Panel class="TeamHealthBarInner" hittest="false" hittestchildren="false"/>
            </Panel>
        </snippet>
        
        <snippet name="Score">
            <Panel class="Score" hittest="false" hittestchildren="false">
                <Label id="ScoreText" class="TipText" html="true" text="0" />
            </Panel>
        </snippet>

    </snippets>
    <Panel class="MainPanel" hittest="false">
        <Panel id="TopBar" hittest="false" class="MainPanel">
            <Panel id="Clock" hittest="false" hittestchildren="false">
                <Label id="ClockText" class="TipText" html="true" text="--:--" />
            </Panel>
        </Panel>
    </Panel>
</root>