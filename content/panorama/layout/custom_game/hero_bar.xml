<root>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/underscore-min.js" />
        <include src="file://{resources}/scripts/custom_game/hero_bar.js" />
    </scripts>
    <styles>
        <include src="file://{resources}/styles/custom_game/hero_bar.css" />
    </styles>
    <snippets>
    
        <snippet name="HeroBar">
            <Panel class="HeroBar" hittest="false" hittestchildren="false">
                <Panel class="Top" hittest="false" hittestchildren="false">
                    <Panel class="HeroBarRecast" hittest="false" hittestchildren="false" >
                        <Label class="HeroBarRecastKeyText" html="true" text="R" />
                        <DOTAAbilityImage class="HeroBarRecastSpellImage" abilityname="" />
                    </Panel>
                </Panel>
                <Panel class="Middle" hittest="false" hittestchildren="false">
                    <Panel class="HeroBarStatus" hittest="false" hittestchildren="false" >
                        <Label class="HeroBarStatusText" html="true" text="Invulnerable" />
                        <Panel class="HeroBarStatusProgress" hittest="false" hittestchildren="false" >
                            <Panel class="HeroBarStatusProgressInner" hittest="false" hittestchildren="false" />
                        </Panel>
                    </Panel>
                    <Panel class="HeroBarPlayer" hittest="false" hittestchildren="false" >
                        <Label class="HeroBarPlayerText" html="true" text="No name" />
                    </Panel>
                </Panel>
                <Panel class="Bottom" hittest="false" hittestchildren="false">
                    <Panel class="Left" hittest="false" hittestchildren="false">
                        <Panel class="HeroBarCharges" hittest="false" hittestchildren="false" >
                            <Label class="HeroBarChargeText" html="true" text="(" />
                            <Label class="HeroBarChargeText Number" html="true" text="0" />
                            <Label class="HeroBarChargeText" html="true" text=")" />
                        </Panel>
                    </Panel>
                    <Panel class="Middle" hittest="false" hittestchildren="false">
                        <Panel class="HeroBarHealth NoShield" hittest="false" hittestchildren="false">
                            <Panel class="HeroBarHealthInnerBack" hittest="false" hittestchildren="false"/>
                            <Panel class="HeroBarHealthInner" hittest="false" hittestchildren="false"/>                           
                        </Panel>
                        <Panel class="HeroBarHealth WithShield" hittest="false" hittestchildren="false">
                            <Panel class="HeroBarHealthInner" hittest="false" hittestchildren="false"/>                           
                            <Panel class="HeroBarShield" hittest="false" hittestchildren="false" />
                        </Panel>
                        <Panel class="HeroBarMana" hittest="false" hittestchildren="false">
                            <Panel class="HeroBarManaInner" hittest="false" hittestchildren="false"/>
                        </Panel>
                        <Panel class="HeroBarCastPoint" hittest="false" hittestchildren="false">
                            <Panel class="HeroBarCastPointInner" hittest="false" hittestchildren="false"/>
                        </Panel>
                    </Panel>
                    <Panel class="Right" hittest="false" hittestchildren="false">
                        <Panel class="HeroBarStacks" hittest="false" hittestchildren="false" >
                            <Panel class="HeroBarStack" hittest="false" hittestchildren="false" />
                            <Panel class="HeroBarStack" hittest="false" hittestchildren="false" />
                            <Panel class="HeroBarStack" hittest="false" hittestchildren="false" />
                        </Panel>
                        <Panel class="HeroBarCooldown" hittest="false" hittestchildren="false" >
                            <Panel class="HeroBarCooldownCircleBackground" hittest="false" hittestchildren="false" />
                            <Panel class="HeroBarCooldownCircle" hittest="false" hittestchildren="false" />
                        </Panel>
                    </Panel>
                </Panel>
            </Panel>
        </snippet>

    </snippets>
    <Panel class="MainPanel" hittest="false">
        <Panel id="HeroBarsContainer" hittest="false" class="MainPanel" />
    </Panel>
</root>