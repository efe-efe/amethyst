{
    "name": "amethyst",
    "version": "1.0.0",
    "description": "Dota 2 brawler",
    "main": "index.js",
    "author": "Efe",
    "license": "ISC",
    "scripts": {
        "build": "run-p build:*",
        "build:panorama": "tsc --project content/panorama/scripts/custom_game/tsconfig.json",
        "build:vscripts": "tstl --project game/scripts/vscripts/tsconfig.json",
        "build:css": "sass src/panorama/styles:content/panorama/styles/custom_game --update --no-source-map",
        "build:images": "node scripts/images",
        "dev": "run-p dev:*",
        "dev:panorama": "tsc --project src/panorama/tsconfig.json --watch",
        "dev:vscripts": "tstl --project src/vscripts/tsconfig.json --watch",
        "dev:webpack": "npx webpack --config src/panorama/webpack.config.js --watch",
        "dev:sass": "sass src/panorama/styles:content/panorama/styles/custom_game --update --watch --no-source-map",
        "dev:images": "node scripts/images --watch",
        "dev:localization": "tsc-watch -p src/localization/tsconfig.json --onSuccess \"node ./src/localization/build/index.js --silent\""
    },
    "dependencies": {
        "@moddota/dota-lua-types": "^4.26.1",
        "@moddota/panorama-types": "^1.26.0",
        "@types/node": "^20.2.3",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "fs-extra": "^11.1.1",
        "node-watch": "^0.7.3",
        "npm-run-all": "^4.1.5",
        "sass": "^1.64.0",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.1.3",
        "typescript-to-lua": "^1.16.3",
        "webpack": "^5.83.1",
        "webpack-cli": "^5.1.1"
    }
}
