{
  "name": "amethyst",
  "version": "1.0.0",
  "description": "Dota 2 brawler",
  "main": "index.js",
  "author": "Efe",
  "license": "ISC",
  "scripts": {
    "build": "run-p build:*",
    "build:panorama": "tsc --project content/panorama/scripts/custom_game/tsconfig.json",
    "build:vscripts": "tstl --project game/scripts/vscripts/tsconfig.json",
    "dev": "run-p dev:*",
    "localization": "run-p localization:*",
    "dev:panorama": "tsc --project src/panorama/tsconfig.json --watch",
    "dev:vscripts": "tstl --project src/vscripts/tsconfig.json --watch",
    "dev:webpack": "npx webpack --config src/panorama/webpack.config.js --watch",
    "dev:sass": "node-sass -w content/panorama/styles/custom_game/ -o content/panorama/styles/custom_game/",
    "dev:localization": "tsc-watch -p src/localization/tsconfig.json --onSuccess \"node ./src/localization/build/index.js --silent\""
  },
  "devDependencies": {
    "@moddota/dota-lua-types": "^4.7.1",
    "@moddota/panorama-types": "^1.5.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "fs-extra": "^9.1.0",
    "node-sass": "^5.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "typescript-to-lua": "^0.39.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "tsc-watch": "^5.0.3"
  },
  "dependencies": {
    "node-watch": "^0.7.1"
  }
}
